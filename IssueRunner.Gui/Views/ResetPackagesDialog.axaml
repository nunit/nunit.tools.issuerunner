<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IssueRunner.Gui.ViewModels"
        x:Class="IssueRunner.Gui.Views.ResetPackagesDialog"
        x:DataType="vm:ResetPackagesViewModel"
        Title="Reset Packages"
        Width="500"
        Height="250"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Progress Section -->
        <StackPanel Grid.Row="0" Spacing="15">
            <TextBlock Text="{Binding StatusText}" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Foreground="#333"/>
            <TextBlock Text="{Binding CurrentIssue}" 
                      FontSize="12" 
                      Foreground="#666">
                <TextBlock.IsVisible>
                    <Binding Path="CurrentIssue">
                        <Binding.Converter>
                            <x:Static Member="StringConverters.IsNotNullOrEmpty"/>
                        </Binding.Converter>
                    </Binding>
                </TextBlock.IsVisible>
            </TextBlock>
        </StackPanel>
        
        <!-- Progress Details -->
        <StackPanel Grid.Row="1" Spacing="15" Margin="0,15,0,0" VerticalAlignment="Center">
            <!-- Progress Bar -->
            <StackPanel Spacing="5">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ProgressText}" 
                              FontSize="12" 
                              Foreground="#666"/>
                    <TextBlock Grid.Column="1" 
                              Text="{Binding Progress, StringFormat='{}{0:F1}%'}" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              Foreground="#0078D4"/>
                </Grid>
                <ProgressBar Value="{Binding Progress}" 
                            Maximum="100" 
                            Height="20"
                            Foreground="#0078D4"
                            Background="#E0E0E0"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto" Margin="0,20,0,0">
            <Button Grid.Column="1" 
                   Content="Cancel" 
                   Command="{Binding CancelCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="100"
                   Padding="20,8"
                   IsEnabled="{Binding CanCancel}"
                   Background="#F44336"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"
                   IsVisible="{Binding IsRunning}"/>
            <Button Grid.Column="2" 
                   Content="Close" 
                   Command="{Binding CloseCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="100"
                   Padding="20,8"
                   IsEnabled="{Binding !IsRunning}"
                   Background="#6C757D"
                   Foreground="White"
                   FontWeight="SemiBold"/>
        </Grid>
    </Grid>
</Window>
